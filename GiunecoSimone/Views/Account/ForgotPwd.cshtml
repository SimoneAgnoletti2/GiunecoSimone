
@{
    Layout = "~/Views/Shared/PreLayout.cshtml";
    ViewBag.Title = "Password dimenticata";
}

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <hr />
        <div class="text-info">
            @ViewBag.Message
        </div>
        <hr />

        <div class="form-group">
            <label class="control-label col-md-2">Email</label>
            @Html.TextBox("emailID", "", new { @class = "form-control" })
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Invio" class="btn btn-success" />
            </div>
        </div>
    </div>

    <div>
        @Html.ActionLink("Registrati adesso", "Signup", "Account")
    </div>

    <hr />

    <div>
        @Html.ActionLink("Login", "Login")
    </div>
}


