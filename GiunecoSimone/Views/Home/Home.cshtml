@model IEnumerable<GiunecoSimone.Models.Tasks>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Home";
}

<h2>Attività "@ViewBag.Stato"</h2>

<br />
<br />
<div class="container">
    <div class="row">
        <div class="col-lg-12 my-3">
            <div class="pull-right">
                <div class="btn-group">
                    <button class="btn btn-info" id="list">
                        Lista
                    </button>
                    <button class="btn btn-danger" id="grid">
                        Griglia
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="row view-group">

        @foreach (var item in Model)
        {
            <div class="item col-6 col-xs-6 col-lg-6">
                <div class="thumbnail card">
                    <div class="caption card-body">
                        <h4 class="group card-title inner list-group-item-heading">
                            @Html.DisplayFor(modelItem => item.Title)
                        </h4>
                        <p class="group inner list-group-item-text">
                            @Html.DisplayFor(modelItem => item.Description)
                        </p>
                        <br />
                        <div class="row">
                            <div class="col-xs-12 col-md-6">
                                <p class="group inner list-group-item-text">
                                    Data creazione: @Html.DisplayFor(modelItem => item.Date)
                                </p>
                            </div>
                            <div class="col-xs-12 col-md-6">
                                <br />
                                @Html.ActionLink("Modifica", "Edit", "Home", new { id = item.Id }, new { @class = "btn btn-success" })
                                @Html.ActionLink("Dettaglio", "Details", "Home", new { id = item.Id }, new { @class = "btn btn-info" })
                                @Html.ActionLink("Elimina", "Delete", "Home", new { id = item.Id }, new { @class = "btn btn-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

    <br />
    <br />
    <br />
    <br />

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @{var state = (GiunecoSimone.Enumerator.State)item.State;}
                    @Html.DisplayFor(modelItem => state)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>